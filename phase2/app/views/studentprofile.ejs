<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<link rel="stylesheet" href="/css/profile.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Profile</title>
</head>
<body>
	<header>
		<nav>
			<ul id = "nav">
				<li class="logo"><a href="/home"><img src="/images/logo.png" style="width:80px;height:40px"></a></li>
				<li><a href="#panel-in">Games</a>
                    <ul id="subnav">
						<li><a href='/game/lol'>League of Legends</a></li>
                        <li><a href="/game/overwatch">Overwatch</a></li>
                        <li><a href="/game/dota2">Dota2</a></li>
                        <li><a href="/game/csgo">CS:GO</a></li>
                    </ul>
                </li>
				<li><a href="/search">Find a Coach</a></li>
				<li><a href="/follow">Follow</a>
				<li><a href="/message">Message</a>
				<li class="usersection" ><a href="/logout">Log Out</a></li>
			</ul>
		</nav>
	</header>
	<div class="main_content">
		<section class="information">
			<div class = "profile">
				<div class = "photo">
					<img src="../images/person.gif" class="img-responsive" alt="Who is that" style="width:150px;height:150px;">
				</div>
				<div class="g_information">
					<h2><%= user.local.nickname %></h2>
					<p> <span style="font-weight:bold">Welcome </span> <%= user.local.nickname %> !</p>
					<p> <span style="font-weight:bold">Your Account: </span> <%= user.local.email %>.</p>
					<div class="location">
						<img src="../images/adress-logo.png" class="address" style="width:20px;height:20px;">
					</div>
					<p> <%= user.local.location %>.</p>
				</div>
				<div class="messager" onclick="location.href='/editstudent'">
					Edit my profile
				</div>
			</div>

			<div class="service">
				<h3 class = "title">Games</h3>
				<div class="types">
					<div class = "game_pic">
						<img src="images/LoL_logo.png" style="width: 50px; height: 50px">
						<br>
					</div>	
					<div class = "description">
						<p>League of Legends</p>
					
					</div>
				</div>
		
			</div>
		</section>
	</div>
</html>
