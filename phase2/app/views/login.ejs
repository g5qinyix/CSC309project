<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<link rel="stylesheet" href="../css/a4c.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> 
    
	<title>login</title>
</head>
<body>
	<!--codes for the navigation bar-->
	
    
<div class="login-page">
  <div class="form">
    
    <!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
    <form class="login-form" action="/login" method="post">
      <input id="loginname" type="text" name="email" placeholder="username"/>
      <input id="loginpassword" type="password" name="password" placeholder="password"/>
       
	  <button type="submit">Login</button>
	   
      <p class="message">Not registered? <a href="/signup">Create an account</a></p>
	  <p style="color:#6699ff; font-weight:bold; margin-top:10px">Login or Register with:</p>

      <a href="/BeMaster/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
      
    </form>
  </div>
</div>
    
    
</body>


</html>