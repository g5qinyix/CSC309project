<!doctype html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>BeMaster</title>
	<link href="/css/profile.css" rel="stylesheet" type="text/css" />
	<!--<script type="text/javascript" src="lol.js"></script>-->
</head>
<body>
	<header>
		<nav>
			<ul>
				<li class="logo"><a href="#panel-home">BeMaster</a></li>
				<li><img src="/images/close-envelope.png" onmouseover='src="/images/close-envelope1.png"' onmouseout='src="/images/close-envelope.png"' onclick="location.href='/messaging';"></li>
				<li><a href='/profile'><%=user.local.nickname%></a></li>
				<li><img src="/images/upwards-arrow.png" onmouseover='src="/images/upwards-arrow1.png"' onmouseout='src="/images/upwards-arrow.png"' id="upwards"></li>
			</ul>
		</nav>
	</header>
	<section class = "information">
		<div class = "profile">
			<div class = "photo">
			 	<img src="/images/person1.jpg">
			</div>
			<div class="g_information">
				<h2>Name</h2>
				<p>I am <%=user.local.nickname%></p>
			</div>
			<div id="edit" onclick="location.href='/editcoach'">
				<img src="/images/edit.png">
			</div>
			<div id="message" onclick="location.href='/editcoach'">
				<img src="/images/conversation.png">
			</div>
			
		</div>
	</section>
	<section id="service">
		<div class="flip-container-1" ontouchstart="this.classList.toggle('hover');">
			<div class="flipper">
				<div class="col-md-3-1">
		            <img class="img-responsive" src=
			        "/images/csgo_logo.png">
		        </div>
		        <div class="back-1">
		        	<p>Rating: <%=user.local.rate.grade%></p>
		        	<p>Price: <%=user.local.cost%></p>
		        </div>
	        </div>
        </div>
  
  
    </section>
	<section class="others_life">
		<h2>You comments</h2>
		<% comments.forEach(function(comment) { %>
		<div id = "posts">
			<div class = "small_photo">
					<img src="/images/person.gif" class="img-responsive" alt="Who is that" style="width:50px;height:50px;">
			</div>
			<div class="content">
				<div class = "ID">
					<a href="/users/<%=comment.comment.studentid%>"><p class = "ID"><%=comment.comment.nickname %></p></a>
				</div>
				<p><%=comment.comment.content%></p>
			</div>
			 <p><%=comment.comment.date%></p>
		</div>
		<% }); %>	
		<div class="reply_box">
			<img id="reply" src="./images/reply_icon.png" style="width: 20px; height: 20px">
			<input type="text" placeholder="write something!" class = "reply"></input>
			<button type="button" id="post_button">add comments!</button>	
		</div>
	</section>